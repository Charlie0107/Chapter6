import java.util.Scanner;

public class TwoDice3
{
    public static void main(String[] args) 
    {
        int response;
        Scanner scann = new Scanner(System.in);
        do
        {
            Die Die1 = new Die();    
            Die Die2 = new Die();
        
            int value1 = Die1.getValue();
            int value2 = Die2.getValue();
           
        
            
            System.out.println("");
            System.out.println("Primer dado es: " + value1);
            System.out.println("");
            System.out.println("Primer dado es: " + value2);


            if(value1 > value2) {
                System.out.println("");
                System.out.println("El primer dado es el ganador!");
            }        
            else 
                if(value2 > value1) {
                System.out.println("");
                System.out.println("El segundo dado es el ganador!"); 
            }   
                else {
                System.out.println("");
                System.out.println("EMPATEE!");
            }  
            
        while(response == 1);
  
    }
    
